<div class="section">
  <div class="row">
    <div class="col s6 center">
      Latitude<br />
      {{latitude}}
    </div>
    <div class="col s6 center">
      Longitude<br />
      {{longitude}}
    </div>
  </div>
</div>
<div class="divider"></div>
<div class="section">
  <div class="row">
    <div class="col s6 center">
      Altitude<br />
      {{altitude}} m
    </div>
    <div class="col s6 center">
      Velocity<br />
      {{speed}} m/s
    </div>
  </div>
</div>
<div class="divider"></div>
<div class="section">
  <div class="row">
    <div class="col s12 center">
      {{#if flightRunning}}
        <button type="button" class="btn btn-large" {{action 'stopFlight'}}>Stop Flight</button>
      {{else}}
        <button type="button" class="btn btn-large" {{action 'startFlight'}}>Start Flight</button>
      {{/if}}
    </div>
  </div>
</div>
